NAME	:=
SRC		:=
# **************************************************************************** #
CC		:=	clang
CFLAGS	:=	-Werror -Wall -Wextra -g -O2
OBJ		:=	$(SRC:.c=.o)
# **************************************************************************** #
all : $(NAME)
.PHONY: all
$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) -o $@ -c $(OBJ)
%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<
clean :
	rm -f $(OBJ)
.PHONY: clean
fclean : clean
	rm -f $(NAME)
.PHONY: fclean
re : fclean all
.PHONY: re
